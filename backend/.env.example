# Uma Racing Web - Environment Variables
# Copy this file to .env and adjust values as needed

# Database Configuration
DATABASE_URL=sqlite:///uma_racing.db

# JWT Token Configuration
JWT_SECRET=uma-racing-web-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration
FRONTEND_URL=http://localhost:5500

# CORS Configuration (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5500,http://localhost:8000

# Debug Mode (set to false in production)
DEBUG=true

# Logging
LOG_LEVEL=INFO
